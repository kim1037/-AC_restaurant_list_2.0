<div class="container-sm mt-3" style="width: 70%;">
  <!--待補驗證效果-->
  <h1 class="m-3" style="text-align:center;">新增餐廳</h1>
  <form action="/restaurants" method="post" class="border rounded-3 shadow-sm p-3 needs-validation" id="form" novalidate>
    <div class="row mb-3">
      <label for="name" class="col-sm-2 col-form-label">餐廳名稱</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
    </div>
    <div class="row mb-3">
      <label for="name_en" class="col-sm-2 col-form-label">餐廳英文店名</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name_en" name="name_en" />
      </div>
    </div>
    <div class="row mb-3">
      <label for="category" class="col-sm-2 col-form-label">餐廳類型</label>
      <div class="col-sm-10">
        <input class="form-control" list="category-Option" id="category" placeholder="Type to search..." name="category" required>
        <datalist id="category-Option">
          <option value="中東料理">
          <option value="日本料理">
          <option value="義式餐廳">
          <option value="美式餐廳">
          <option value="酒吧">
          <option value="咖啡">
        </datalist>
      </div>
    </div>
    <div class="row mb-3">
        <label for="image" class="col-sm-2 col-form-label">餐廳圖片(URL)</label>
        <div class="col-sm-10">
          <input type="url" class="form-control" id="image" name="image" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="location" class="col-sm-2 col-form-label">餐廳地址</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="location" name="location" required >
        </div>
      </div>
      <div class="row mb-3">
        <label for="phone" class="col-sm-2 col-form-label">電話</label>
        <div class="col-sm-10">
          <input type="tel" class="form-control" id="phone" name="phone" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="google-map" class="col-sm-2 col-form-label">Google地圖</label>
        <div class="col-sm-10">
          <input type="url" class="form-control" id="google-map" name="google_map" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="rating" class="col-sm-2 col-form-label">店家評分</label>
        <div class="col-sm-10">
          <input type="number" step="0.1" class="form-control" id="rating" name="rating" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="description" class="col-sm-2 col-form-label">餐廳描述</label>
        <div class="col-sm-10">
          <textarea class="form-control" id="description" rows="3" name="description" required></textarea>
        </div>
      </div>
    <div class="row mb-3 justify-content-end">
      <div class="col-1 mt-2">
        <button type="submit" class="btn btn-primary" id="submitButton">Submit</button>
                
      </div>
      <div class="col-1 mt-2">
        <button type="reset" class="btn btn-danger" id="submitButton">Reset</button>
      </div>
    </div>
  </form>
</div>

<script src="/javascripts/validation.js"></script>